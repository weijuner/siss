<?xml version="1.0" encoding="utf-8"?><!--顶部tab栏左边选中背景-->
<!--主页编辑框背景-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/btn_white_normal" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" />
            <!-- padding: Button 里面的文字与Button边界的间隔 -->
        </shape>
    </item>
</selector>