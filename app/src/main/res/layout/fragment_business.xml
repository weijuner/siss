<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="300dip"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tv_buyer_buss"
            android:textColor="@color/btn_white_normal"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_left_tab_bar_select"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="客源业务"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/tv_seller_buss"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_center_tab_bar_normal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="房源业务"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/tv_cooperation_buss"
            android:background="@drawable/selector_right_tab_bar_normal"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="合作业务"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="10dp"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
